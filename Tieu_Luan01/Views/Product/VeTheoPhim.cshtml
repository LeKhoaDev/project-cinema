@model Tieu_Luan01.Models.Common
@{
    ViewBag.Title = "VeTheoPhim";
}
@using Tieu_Luan01.Models

<body>
    <div ng-controller="bookingPageController" class="container ng-scope">
        <div class="row">
            <div class="col-md-12">
                <div class="tab-movies">
                    <div class="tab-movie-line">
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="@Url.Action("VeTheoPhim", "Product")" data-toggle="tab" ng-click="changeTab(" byMovie")"> Theo phim</a>
                            </li>
                            <li>
                                <a href="@Url.Action("VeTheoRap", "Product")" data-toggle="tab" ng-click="changeTab(" byCinema")"> Theo rạp</a>
